{{#if error}}
    <div class="box error">
        <h1>
            Error: 404 Not found
        </h1>
        <p>The resource <strong>{{url}}</strong> could not be found.</p>
    </div>
{{/if}}

<div class="box">
    <h1>
        Index of
        <strong>{{folder}}</strong>
    </h1>
    <ul>
        {{#if hasParent}}
            <li>
                <a href="..">
                    <img src="/__seve/icons/parent.png" alt="" />
                    <strong>parent</strong>
                </a>
            </li>
        {{/if}}
        {{#each files}}
            {{#if name}}
                <li>
                    <a href="{{name}}" class="{{#if isFolder}}folder{{/if}}">
                        <img src="/__seve/icons/{{mime}}.png" alt="" />
                        <strong>{{name}}{{#if isFolder}}/{{/if}}</strong>
                        <time datetime="{{time.raw}}">{{time.human}}</time>
                        <span>{{#if isFolder}}-{{else}}{{size}}{{/if}}</span>
                    </a>
                </li>
            {{/if}}
        {{/each}}
    </ul>
</div>
<footer>
    <a href="//github.com/leny/seve" rel="external" target="_new">sèvè/{{version}}</a>
    serving <span>{{root}}</span> at localhost:{{port}}
</footer>
